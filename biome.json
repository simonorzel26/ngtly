{
	"$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"maxSize": 5048576,
		"ignore": [
			"**/node_modules",
			"**/dist",
			"**/build",
			"**/out",
			"**/target",
			"**/coverage",
			"**/lib",
			"**/tmp",
			"**/temp",
			"**/.next",
			"**/generated",
			"**/public/*.js",
			"**/public/*.map"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"noSvgWithoutTitle": "off"
			},
			"security": {
				"noDangerouslySetInnerHtml": "off"
			}
		}
	}
}